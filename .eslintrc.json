{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "extends": "airbnb-typescript",
  "plugins": [
    "import",
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-use-before-define": 0,
    "import/prefer-default-export": 0,
    "no-undef": 1
  }
}
